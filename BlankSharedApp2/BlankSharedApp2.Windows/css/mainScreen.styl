.mainScreen
  position absolute
  width 100%
  height 100%
  .appTitle
    position absolute
    top 45%
    width 100%
    text-align center
    z-index 0
    font-size 250%
    font-family 'Playball', cursive
  .preview
    position absolute
    display block
    top 0
    left 0
    z-index 2
    width 100%
    height 100%
    border 1px solid silver
    video
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  .active
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 100%
    border 1px solid silver
    video
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  .activeWithPreview
    top auto
    left auto
    bottom 0
    right 0